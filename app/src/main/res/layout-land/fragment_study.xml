<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.study.wordsstudy.ShowWordFragment"
    android:id="@+id/constraintLayout2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/word"
        android:textAlignment="center"
        tools:text="@string/text_view_word"
        android:text="dsfasdf"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        android:layout_marginStart="100dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/translate"
        tools:text="@string/text_view_translate"
        android:text="dsfsf"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
        android:layout_marginTop="50dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
        android:layout_marginEnd="100dp" />

    <Button
        android:text="@string/button_one_day"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:id="@+id/one_day_button"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
        android:layout_marginTop="206dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
        android:layout_marginBottom="50dp" />

    <Button
        android:text="@string/button_four_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/four_day_button"
        app:layout_constraintLeft_toRightOf="@+id/one_day_button"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
        android:layout_marginBottom="50dp" />

    <Button
        android:text="@string/button_one_min"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:id="@+id/one_min_button"
        app:layout_constraintRight_toLeftOf="@+id/one_day_button"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
        android:layout_marginBottom="50dp" />

</android.support.constraint.ConstraintLayout>
